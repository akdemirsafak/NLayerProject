@{
    ViewData["Title"] = "Save";
}
@model ProductDto

<h1>Save Product</h1>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Save" method="post" asp-controller="Products">

            <div class="form-group mt-2">
                <label asp-for="Name"></label>
                <input asp-for="Name" type="text" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Stock"></label>
                <input asp-for="Stock" type="text" class="form-control">
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Price"></label>
                <input asp-for="Price" type="text" class="form-control">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-primary">
            </div>


        </form>
    </div>
</div>